# GTK theme
include "~/.themes/Numix/gtk-2.0/gtkrc"
include "~/.themes/iris/gtk-2.0/gtkrc"

# Font
style "myFont" {
	font_name = "Helvetica 11"
}
widget_class "*" style "myFont"
gtk-font-name = "Helvetica 11"

# Icon theme
gtk-icon-theme-name = "Numix"

# Toolbar style
gtk-toolbar-style = GTK_TOOLBAR_ICONS
